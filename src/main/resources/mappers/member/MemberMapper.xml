<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.study.prj1.mapper.member.MemberMapper">

    <select id="getEmail" resultType="com.study.prj1.domain.member.MemberDto">
        SELECT *
        FROM
            Member
        WHERE
            email = #{email}
    </select>

    <delete id="remove">
        DELETE FROM
            Member
        WHERE
            id = #{id};
    </delete>

    <update id="update">
        UPDATE Member
        SET
            password = #{password},
            email = #{email}
        WHERE
            id = #{id}
    </update>

    <select id="selectOne" resultType="com.study.prj1.domain.member.MemberDto">
        SELECT
            *
        FROM
            Member
        WHERE
            id = #{id}
    </select>

    <select id="selectAll" resultType="com.study.prj1.domain.member.MemberDto">
        SELECT
            id, '**' password, email, inserted
        FROM
            Member
        ORDER BY
            id
    </select>

    <insert id="insert">
        INSERT INTO Member (id, password, email)
        VALUES (#{id}, #{password}, #{email})
    </insert>



</mapper>